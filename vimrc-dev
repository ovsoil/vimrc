    let g:ctrlp_user_command = 'dir %s /-n /b /s /a-d'  " Windows
  else
    " MacOSX/Linux
    let g:ctrlp_user_command = [
          \ '.git', 'cd %s && git ls-files . -co --exclude-standard',
          \ 'find %s -type f'
          \ ]
  endif
endif

